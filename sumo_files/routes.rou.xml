<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- Araç türlerinin tanımı -->
    <vType id="car" accel="2.6" decel="4.5" sigma="0.5" length="5" minGap="2.5" maxSpeed="55.55" color="1,1,0"/>
    <vType id="bus" accel="2.0" decel="4.0" sigma="0.5" length="12" minGap="3.0" maxSpeed="40.0" color="0,0.5,1"/>

    <!-- Arabalar ve otobüsler için güzergâh tanımları -->
    <!-- Batıdan doğuya güzergâhlar -->
    <route id="route_0" edges="E1 E2"/>  <!-- Batı → Doğu (doğrudan) -->
    <route id="route_1" edges="E1 E3"/>  <!-- Batı → Güney -->
    <route id="route_2" edges="E1 E4"/>  <!-- Batı → Kuzey -->

    <!-- Doğudan batıya güzergâhlar -->
    <route id="route_3" edges="E5 E8"/>  <!-- Doğu → Batı (doğrudan) -->
    <route id="route_4" edges="E5 E3"/>  <!-- Doğu → Güney -->
    <route id="route_5" edges="E5 E4"/>  <!-- Doğu → Kuzey -->

    <!-- Güneyden kuzeye güzergâhlar -->
    <route id="route_6" edges="E6 E4"/>  <!-- Güney → Kuzey (doğrudan) -->
    <route id="route_7" edges="E6 E2"/>  <!-- Güney → Doğu -->
    <route id="route_8" edges="E6 E8"/>  <!-- Güney → Batı -->

    <!-- Kuzeyden güneye güzergâhlar -->
    <route id="route_9" edges="E7 E3"/>   <!-- Kuzey → Güney (doğrudan) -->
    <route id="route_10" edges="E7 E2"/>  <!-- Kuzey → Doğu -->
    <route id="route_11" edges="E7 E8"/>  <!-- Kuzey → Batı -->

    <!-- Arabalar için trafik akışları -->
    <flow id="flow_0" type="car" route="route_0" begin="0" end="100000" probability="0.1"/>
    <flow id="flow_1" type="car" route="route_1" begin="0" end="100000" probability="0.05"/>
    <flow id="flow_2" type="car" route="route_2" begin="0" end="100000" probability="0.05"/>
    <flow id="flow_3" type="car" route="route_3" begin="0" end="100000" probability="0.1"/>
    <flow id="flow_4" type="car" route="route_4" begin="0" end="100000" probability="0.05"/>
    <flow id="flow_5" type="car" route="route_5" begin="0" end="100000" probability="0.05"/>
    <flow id="flow_6" type="car" route="route_6" begin="0" end="100000" probability="0.1"/>
    <flow id="flow_7" type="car" route="route_7" begin="0" end="100000" probability="0.05"/>
    <flow id="flow_8" type="car" route="route_8" begin="0" end="100000" probability="0.05"/>
    <flow id="flow_9" type="car" route="route_9" begin="0" end="100000" probability="0.1"/>
    <flow id="flow_10" type="car" route="route_10" begin="0" end="100000" probability="0.05"/>
    <flow id="flow_11" type="car" route="route_11" begin="0" end="100000" probability="0.05"/>

    <!-- Otobüsler için trafik akışları -->
    <flow id="bus_0" type="bus" route="route_0" begin="0" end="100000" probability="0.02"/>
    <flow id="bus_3" type="bus" route="route_3" begin="0" end="100000" probability="0.02"/>
    <flow id="bus_6" type="bus" route="route_6" begin="0" end="100000" probability="0.02"/>
    <flow id="bus_9" type="bus" route="route_9" begin="0" end="100000" probability="0.02"/>
</routes>
